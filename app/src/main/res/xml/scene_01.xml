<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end3"
        motion:duration="300">
        <OnClick
            motion:targetId="@+id/button3"
            motion:clickAction="toggle" />
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/end3"
        motion:constraintSetEnd="@+id/end4"
        motion:duration="300">
        <OnClick
            motion:targetId="@+id/button4"
            motion:clickAction="transitionToEnd" />
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/end3"
        motion:constraintSetEnd="@+id/end5"
        motion:duration="300">
        <OnClick
            motion:targetId="@+id/button5"
            motion:clickAction="transitionToEnd" />
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end4"
        motion:duration="300">
        <OnClick
            motion:targetId="@+id/button4"
            motion:clickAction="toggle" />
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/end4"
        motion:constraintSetEnd="@+id/end3"
        motion:duration="300">
        <OnClick
            motion:targetId="@+id/button3"
            motion:clickAction="transitionToEnd" />
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/end4"
        motion:constraintSetEnd="@+id/end5"
        motion:duration="300">
        <OnClick
            motion:targetId="@+id/button5"
            motion:clickAction="transitionToEnd" />
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end5"
        motion:duration="300">
        <OnClick
            motion:targetId="@+id/button5"
            motion:clickAction="toggle" />
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/end5"
        motion:constraintSetEnd="@+id/end3"
        motion:duration="300">
        <OnClick
            motion:targetId="@+id/button3"
            motion:clickAction="transitionToEnd" />
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/end5"
        motion:constraintSetEnd="@+id/end4"
        motion:duration="300">
        <OnClick
            motion:targetId="@+id/button4"
            motion:clickAction="transitionToEnd" />
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="36dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/button3"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/button4" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="181dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/button4"
            motion:layout_constraintStart_toEndOf="@+id/button3"
            motion:layout_constraintEnd_toStartOf="@+id/button5" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="307dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/button5"
            motion:layout_constraintStart_toEndOf="@+id/button4"
            motion:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end3">

        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="36dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="200dp"
            android:id="@+id/button3"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/button4" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="181dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/button4"
            motion:layout_constraintStart_toEndOf="@+id/button3"
            motion:layout_constraintEnd_toStartOf="@+id/button5" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="307dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/button5"
            motion:layout_constraintStart_toEndOf="@+id/button4"
            motion:layout_constraintEnd_toEndOf="parent" />

    </ConstraintSet>
    <ConstraintSet android:id="@+id/end4">

        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="36dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/button3"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/button4" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="181dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="200dp"
            android:id="@+id/button4"
            motion:layout_constraintStart_toEndOf="@+id/button3"
            motion:layout_constraintEnd_toStartOf="@+id/button5" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="307dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/button5"
            motion:layout_constraintStart_toEndOf="@+id/button4"
            motion:layout_constraintEnd_toEndOf="parent" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end5">

        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="36dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/button3"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/button4" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="181dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/button4"
            motion:layout_constraintStart_toEndOf="@+id/button3"
            motion:layout_constraintEnd_toStartOf="@+id/button5" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="307dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="200dp"
            android:id="@+id/button5"
            motion:layout_constraintStart_toEndOf="@+id/button4"
            motion:layout_constraintEnd_toEndOf="parent" />

    </ConstraintSet>
</MotionScene>